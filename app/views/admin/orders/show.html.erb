<h1>注文履歴詳細</h1>

 <table>
   <tbody>
     <tr>
       <td><strong>購入者</strong></td>
       <td><%= @order.order_name %></td>
     </tr>
       <tr>
         <td><strong>注文日</strong></td>
         <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
       </tr>
         <tr>
           <td><strong>配送先</strong></td>
           <td>〒<%= @order.order_postal_code %>　<%= @order.order_address %></br>
                   <%= @order.order_name %>
           </td>
         </tr>
           <tr>
             <td><strong>支払方法</strong></td>
             <td><%= @payment %></td>
           </tr>
             <tr>
               <td><strong>注文ステータス</strong></td>
               <td></td>
             </tr>
   </tbody>
 </table>
   <table>
    <thead>
     <tr>
      <td><strong>商品名</strong></td>
      <td><strong>単価(税込)</strong></td>
      <td><strong>数量</strong></td>
      <td><strong>小計</strong></td>
      <td><strong>製作ステータス</strong></td>
     </tr>
    </thead>
       <tbody>
          <% @details.each do |detail| %>
         <tr>
           <td><%= detail.item.name %></td>
           <td><%= (detail.item.price * 1.1).round %></td>
           <td><%= detail.amount %></td>
           <td><%= (detail.item.price * 1.1 * detail.amount).round %></td>
         </tr>
          <% end %>
       </tbody>
   </table>
   
     <table>
       <tbody>
        <tr>
          <td><strong>商品合計</strong></td>
          <td><%= @order.total_amount %>円</td>
        </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td><%= @order.shipping %>円</td>
          </tr>
            <tr>
              <td><strong>請求金額合計</strong></td>
              <td><%= @order.total_amount + @order.shipping %>円</td>
            </tr>
       </tbody>
     </table>