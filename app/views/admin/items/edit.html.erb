<h1>商品編集</h1>
<%= form_with model:@item, url: admin_item_path, local: true do |f| %>

<h4>商品画像</h4>
 　<!--attachment付け足す-->
  <%= f.attachment_field :image %>
 　<h4>商品名</h4>
　<%= f.text_field :name %>
　  <h4>商品説明</h4>
　<%= f.text_area :introduction %>
　　 <h4>ジャンル</h4>
　<!--ジャンル項目付け足す-->
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %>
　　　<h4>税抜価格</h4>
　<%= f.text_field :price %>円
　     <h4>販売ステータス</h4>
　   <!--販売ステータス付け足す-->
　<%= f.submit "変更を保存" %>
<% end %>