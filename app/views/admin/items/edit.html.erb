<div class="container">
  <div class="d-flex align-items-center" style="width:100%; height:100px;">
    <h3><span class="bg-light">商品編集</span></h3>
  </div>
<%= form_with model:@item, url: admin_item_path, local: true do |f| %>


<table>
 <tbody>
   <tr>
    <td>商品画像</td>
  　 <!--attachment付け足す-->
    <td><%= f.attachment_field :image %></td>
   </tr>
     <tr>
       <td>商品名</td>
　     <td><%= f.text_field :name %></td>
　   </tr>
　     <tr>
　      <td class="align-top">商品説明</td>
　      <td><%= f.text_area :introduction %></td>
　     </tr>
　       <tr>
　　       <td>ジャンル</td>
　         <!--ジャンル項目付け足す-->
           <td><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %></td>
         </tr>
           <tr>
　　　       <td>税抜価格</td>
　           <td><%= f.text_field :price %>円</td>
　         </tr>
　           <tr>
　             <td>販売ステータス</td>
　             <!--販売ステータス付け足す-->
　             <td></td>
　</tbody>
</table>
　<!--<%= f.submit "変更を保存" %>-->
　<input type="submit" class="btn btn-success" value="変更を保存">
<% end %>
</div>