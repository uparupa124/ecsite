<h1>商品詳細</h1>

<!--画像付け足す-->
<%= attachment_image_tag @item, :image, :fill, 100, 100, format:"jpeg" %>
<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
     <tr>
       <td>商品説明</td>
       <td><%= @item.introduction %></td>
     </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
       <tr>
         <td>税込価格（税抜価格）</td>
         <td><%= @item.price %></td>
       </tr>
        <tr>
          <td>販売ステータス</td>
        </tr>
  </tbody>
</table>
  <%= link_to "編集する", edit_admin_item_path %>
