<div class="container">
 
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
  <h3><span class="bg-light">商品一覧</span></h3>
 </div>
  <div class="text-right" style="width:100%;">
  <a href="/admin/items/new"><i class="fas fa-plus fa-2x"></i></a>
  </div>
　 <table class="table">
　  <thead>
　    <tr class="bg-light">
　      <th>商品ID</th>
　      <th>商品名</th>
　      <th>税抜価格</th>
　      <th>ジャンル</th>
　      <th>ステータス</th>
　    </tr>
　  </thead>
　  　<tbody>
　  　 <% @item.each do |item| %>
　  　  <tr>
　  　    <td><%= item.id %></td>
　  　    <td><%= link_to  item.name, admin_item_path(item.id) %></td>
　  　    <td><%= item.price %></td>
　  　    <td><%= item.genre.name %></td>
　  　    <td><%= item.is_active %></td>
　  　  </tr>
　  　 <% end %>
　  　</tbody>
　</table>
 <%= paginate @item %>
</div>