<div class="container">
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
    <h3><span class="bg-light"><%= @customer.first_name + @customer.last_name %>の会員情報</span></h3>
 </div>


　<table style="width:70%; height:60%;">
　  <tbody>
　    <tr>
　      <td>会員ID</td>
　      <td><%= @customer.id %></td>
　    </tr>
　     <tr>
　       <td>氏名</td>
　       <td><%= @customer.first_name %> <%= @customer.last_name %></td>
　     </tr>
　      <tr>
　        <td>フリガナ</td>
　        <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
　      </tr>
　        <tr>
　          <td>郵便番号</td>
　          <td><%= @customer.postal_code %></td>
　        </tr>
　          <tr>
　            <td>住所</td>
　            <td><%= @customer.address %></td>
　          </tr>
　            <tr>
　              <td>電話番号</td>
　              <td><%= @customer.telephone_number %></td>
　            </tr>
　              <tr>
　                <td>メールアドレス</td>
　                <td><%= @customer.email %></td>
　              </tr>
　                <tr>
　                  <td>会員ステータス</td>
　                   <% if @customer.is_active == "Available" %>
                      <% @is_active = "有効" %>
                     <% else %>
                      <% @is_active = "退会" %>
                     <% end %>
                    <td><%= @is_active %></td>
　                </tr>
　  </tbody>
　</table>
　<div class="mt-5">
　 <a href="/admin/customers/<%= @customer.id %>/edit" class="btn btn-success" role="button">編集する</a>
 　<a href="/admin" class="btn btn-primary" role="button">注文履歴一覧を見る</a>
 　</div
</div>