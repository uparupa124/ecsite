<h1><%= @customer.first_name + @customer.last_name %>の会員情報編集</h1>

<%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
 <table>
   <tbody>
     <tr>
       <td>会員ID</td>
       <td><%= @customer.id %></td>
     </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
      </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
        </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address %></td>
            </tr>
              <tr>
                <td>電話番号</td>
                <td><%= f.text_field :telephone_number %></td>
              </tr>
                <tr>
                  <td>メールアドレス</td>
                  <td><%= f.email_field :email %></td>
                </tr>
   </tbody>
 </table>
  
    <%= f.submit "変更を保存" %>
  <% end %>