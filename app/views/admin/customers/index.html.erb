<div class="container">
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
    <h3><span class="bg-light">会員一覧</span></h3>
 </div>
　<table class="table">
　  <thead>
　    <tr class="bg-light">
　      <th>会員ID</th>
　      <th>氏名</th>
　      <th>メールアドレス</th>
　      <th>ステータス</th>
　    </tr>
　  </thead>
　  　<tbody>
　  　  <% @customer.each do |customer| %>
　  　   <tr>
　  　    <td><%= customer.id %></td>
　  　    <td><%= link_to customer.first_name + customer.last_name, admin_customer_path(customer.id) %></td>
　  　    <td><%= customer.email %></td>
　  　  <% if customer.is_active == "Available" %>
         <% @is_active = "有効" %>
        <% else %>
         <% @is_active = "退会" %>
        <% end %>
　  　    <td><%= @is_active %></td>
　  　   </tr>
　  　  <% end %>
　  　</tbody>
　</table>
　
　 <%= paginate @customer %>
</div>