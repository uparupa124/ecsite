<div class="container">
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
    <h3><span class="bg-light">ジャンル一覧・追加</span></h3>
 </div>
  <div>
  <table style="width:50%;">
    <tr>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <td>ジャンル名</td>
        <td><%= f.text_field :name %></td>
        <td><input type="submit" class="btn btn-success" value="新規追加"></td>
      <% end %>
    </tr>
  </table>
  </div><br></br>

<div>
 <table class="table">
  <tbody>
    
    <tr class="bg-light">
      <td class="text-center">ジャンル</td>
      <td></td>
    </tr>
     <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.name %></td>
       <td><a href="/admin/genres/<%= genre.id %>/edit" class="btn btn-success" role="button">編集</a></td>
      </tr>
     <% end %>
  </tbody>
 </table>
</div>
</div>