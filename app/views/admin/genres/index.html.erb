<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
<h1>ジャンル一覧・追加</h1>
<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit "新規追加" %>
<% end %>


<table>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集', edit_admin_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>