<h1>ショッピングカート</h1>
　<table>
　  <thead>
　    <tr>
　      <th>商品名</th>
　      <th>単価(税込)</th>
　      <th>数量</th>
　      <th>小計</th>
　      <th></th>
　    </tr>
　  </thead>
　    <tbody>
　     <% @cart_item.each do |cart_item| %>
　      <tr>
　        <td><%= cart_item.item.name %></td>
　        <td><%= cart_item.item.price * 1.1 %></td>
　        <td><%= cart_item.amount %></td>
　        <td><%= cart_item.item.price * 1.1 * cart_item.amount %></td>
　        <!--<td>DELETE</td>-->
　      </tr>
　     <% end %>
　    </tbody>
　</table>