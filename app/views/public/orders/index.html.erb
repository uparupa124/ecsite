<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  　<tbody>
  　 <% @orders.each do |orders| %>
  　   <tr>
  　     <td><%= orders.created_at.strftime("%Y/%m/%d") %></td>
  　     <td><%= orders.order_postal_code %></br>
  　         <%= orders.order_address %></br>
  　         <%= orders.order_name %>
  　     </td>
  　     <td>
  　        
  　     </td>
  　     <td><%= orders.total_amount + orders.shipping %></td>
  　     <td></td>
  　     <td><%= link_to "表示する", order_path(orders) %></td>
  　   </tr>
  　 <% end %>
  　</tbody>
</table>