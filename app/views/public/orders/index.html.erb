<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  　<tbody>
  　 <% @orders.each do |order| %>
  　   <tr>
  　     <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
  　     <td><%= order.order_postal_code %></br>
  　         <%= order.order_address %></br>
  　         <%= order.order_name %>
  　     </td>
  　     <td>
  　      <% order.details.each do |detail| %>
  　     <li><%= detail.item.name %></li>
         <% end %>
  　     </td>
  　     <td><%= order.total_amount + order.shipping %></td>
  　     <td></td>
  　     <td><%= link_to "表示する", order_path(order) %></td>
  　   </tr>
  　 <% end %>
  　</tbody>
</table>