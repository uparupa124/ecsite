<div class="container">
  
  <div class="d-flex align-items-center" style="width:100%; height:100px;">

<h3><span class="bg-light">注文情報入力</span></h3>
  </div>
<%= form_with model:@order, url: confirm_orders_path, local:true do |f| %>
 <div style="width:100%;">
  <p><strong>支払方法</strong></p>
   <div class="list-unstyled">
     <li><%= f.radio_button :payment, 1 %>
         <%= f.label :payment, "クレジットカード" %>
     </li>
     <li><%= f.radio_button :payment, 2 %>
         <%= f.label :payment, "銀行振込" %>
     </li>
   </div>
  </div>
     <div class="list-unstyled">
       <p><strong>お届け先</strong></p>
         <div class="ml-30">
          <div class="pb-10">
          <li><%= f.radio_button :address_option, 0 %>ご自身の住所</li>
         〒<%= @current_customer.postal_code %>
         <%= @current_customer.address %>
         <%= @current_customer.first_name + @current_customer.last_name %>
          </div>
            <div class="pb-10">
             <li><%= f.radio_button :address_option, 1 %>登録済み住所から選択</li>
                   <%= f.collection_select :address_id, @current_customer_address, :id, :view_address %>
            </div>
               <div class="pb-10">
                 <li><%= f.radio_button :address_option, 2 %>新規住所</li>
                   <table>
                     <tbody>
                         <tr>
                            <td>郵便番号(ハイフンなし)</td>
                            <td><%= f.text_field :order_postal_code %></td>
                         </tr>
                             <tr>
                                <td>住所</td>
                                <td><%= f.text_field :order_address %></td>
                             </tr>
                                <tr>
                                   <td>宛名</td>
                                   <td><%= f.text_field :order_name %></td>
                                </tr>
               </div>
                     </tbody>
                   </table>
           </div>
      </div>
       
       <div class="text-center">
        <input type="submit" class="btn btn-primary" value="確認画面へ進む">
       </div>
        

<% end %>
 
</div>