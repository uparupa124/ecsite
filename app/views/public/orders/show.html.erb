<div class="container">
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
  <h3><span class="bg-light">注文履歴詳細</span></h3>
 </div>
   <div class="row">
    <div class="col-7">
     <p><strong>注文情報</strong></p>
      <table class="table table-bordered">
       <tbody>
        <tr>
         <td class="bg-light">注文日</td>
         <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
         <tr>
           <td class="bg-light">配送先</td>
           <td>〒<%= @order.order_postal_code %></br>
                 <%= @order.order_address %></br>
                 <%= @order.order_name %>
           </td>
         </tr>
           <tr>
             <td class="bg-light">支払方法</td>
             <td><%= @payment %></td>
           </tr>
             <tr>
               <td class="bg-light">ステータス</td>
               <td></td>
             </tr>
      </tbody>
     </table>
    </div>
   
    <div class="col-4">
      <p><strong>請求情報</strong></p>
       <table class="table table-bordered">
        <tbody>
         <tr>
          <td class="bg-light">商品合計</td>
          <td><%= @order.total_amount %></td>
         </tr>
          <tr>
            <td class="bg-light">配送料</td>
            <td><%= @order.shipping %></td>
          </tr>
            <tr>
              <td class="bg-light"><strong>請求金額</strong></td>
              <td><%= @order.total_amount + @order.shipping %></td>
            </tr>
        </tbody>
       </table>
    </div>
   </div>
  <p><strong>注文内容</strong></p>
   <table class="table table-bordered">
    <tbody>
     <tr class="bg-light">
       <td>商品</td>
       <td>単価(税込)</td>
       <td>個数</td>
       <td>小計</td>
     </tr>
        <% @details.each do |detail| %>
         <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.order_tax_price %></td>
          <td><%= detail.amount %></td>
          <td><%= detail.order_tax_price * detail.amount %></td>
         </tr>
        <% end %>
      </tbody>
  </table>
</div>