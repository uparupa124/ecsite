<div class="container">
 <div class="mt-5">
  <h1>商品一覧</h1>
 </div>

   <div class="row">
    <% @item.each do |item| %>
     <div class="col-3 mt-5">
      <div class="d-inline-block list-unstyled pr-5">
        <li><%= attachment_image_tag item, :image, :fill, 100, 100, format:"jpeg", fallback:"noimage-1024x898.png", size:"100x100" %></li>
        <li><%= link_to item.name, item_path(item) %></li>
        <li>¥<%= item.price %></li>
      </div>
     </div>
    <% end %>
   </div>
      <p class=""><%= paginate @item %></p>
</div>